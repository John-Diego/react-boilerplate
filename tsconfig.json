{
    "compilerOptions": {
      "outDir": "build/dist",
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "baseUrl": "./src",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "paths": {
        "components": [
          "client/components"
        ]
      }
    },
    "exclude": [
      "node_modules"
    ]
}
